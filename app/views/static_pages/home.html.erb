<div class="row">
  <div class="head-title">
    <h1>
      <span class="mno-logo"></span>
      <div class="text-info">Maestrano Test App</div>
    </h1>
  </div>
</div>

<div class="row" ng-app="mnoApp">
  <script>
    <%= render "data_service.js.erb" %>
  </script>

  <div class="col-sm-6" ng-controller="EmployeeLocationWidgetController" class="widget">
    <div class="top-line">
      Employees location
    </div>
    <div class="content">
      <leaflet center="center" markers="markers" layers="layers" width="100%" height="300px" class="employees-locations"></leaflet>
    </div>
  </div>

  <div class="col-sm-6" ng-controller="SalesFlowWidgetController" class="widget">
    <div class="top-line">
      Sales flow
    </div>
    <div class="content">
      <leaflet center="center" markers="markers" layers="layers" width="100%" height="300px" class="invoices-locations"></leaflet>
    </div>
  </div>

</div>